<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzqedu.dousheng.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.zzqedu.dousheng.entity.User">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="INTEGER"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,age
    </sql>

    <insert id="add">
        insert into user(name, age) values (#{name}, #{age})
    </insert>

    <select id="getOne" resultType="com.zzqedu.dousheng.entity.User">
        select <include refid="Base_Column_List"/>
        from user
        limit 1
    </select>


</mapper>
